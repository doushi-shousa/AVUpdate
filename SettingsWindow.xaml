<Window x:Class="AVUpdate.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Настройки"
        Width="400"
        SizeToContent="Height"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource MaterialDesignPaper}">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" VerticalAlignment="Top" Margin="0,0,0,10" Cursor="">

            <TextBlock Text="Сетевой путь:" Foreground="{DynamicResource MaterialDesignBody}" />
            <TextBox x:Name="NetworkPathTextBox" Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
            <Button Content="Выбрать" Click="SelectNetworkPathButton_Click"
                    Style="{StaticResource MaterialDesignFlatButton}" Margin="0,5,0,10"/>

            <TextBlock Text="Имя архива (маска):" Foreground="{DynamicResource MaterialDesignBody}" />
            <TextBox x:Name="ArchiveNameTextBox" Style="{StaticResource MaterialDesignFloatingHintTextBox}" Margin="0,0,0,10"/>

            <CheckBox x:Name="UseSecondaryPathCheckBox"
                      Content="Использовать второй путь"
                      Margin="0,10,0,5"/>

            <TextBlock Text="Доп. путь:" Foreground="{DynamicResource MaterialDesignBody}" />
            <TextBox x:Name="SecondaryNetworkPathTextBox" Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
            <Button Content="Выбрать" Click="SelectSecondaryNetworkPathButton_Click"
                    Style="{StaticResource MaterialDesignFlatButton}" Margin="0,5,0,10"/>

            <TextBlock Text="Логин:" Foreground="{DynamicResource MaterialDesignBody}" />
            <TextBox x:Name="SecondaryUsernameTextBox" Style="{StaticResource MaterialDesignFloatingHintTextBox}" />

            <TextBlock Text="Пароль:" Margin="0,10,0,0" Foreground="{DynamicResource MaterialDesignBody}" />
            <PasswordBox x:Name="SecondaryPasswordBox" Margin="0,0,0,10"
                         Style="{StaticResource MaterialDesignFloatingHintPasswordBox}" />

            <CheckBox x:Name="UseCustomSourceCheckBox"
                      Content="Путь к обновлению (не DVD)"
                      Margin="0,10,0,5"/>

            <TextBlock Text="Путь к обновлению:" Foreground="{DynamicResource MaterialDesignBody}" />
            <TextBox x:Name="CustomSourcePathTextBox" Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
            <Button Content="Выбрать" Click="SelectCustomSourcePathButton_Click"
                    Style="{StaticResource MaterialDesignFlatButton}" Margin="0,5,0,10"/>

            <TextBlock Text="Цветовая тема:" Foreground="{DynamicResource MaterialDesignBody}" Margin="0,10,0,5"/>
            <ComboBox x:Name="ThemeComboBox"
                      Style="{StaticResource MaterialDesignComboBox}"
                      Width="200">
                <ComboBoxItem Content="Light"/>
                <ComboBoxItem Content="Dark"/>
                <ComboBoxItem Content="System"/>
            </ComboBox>
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Сохранить" Width="100"
                    Click="SaveButton_Click"
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Margin="0,0,10,0"/>
            <Button Content="Отмена" Width="100"
                    IsCancel="True"
                    Style="{StaticResource MaterialDesignFlatButton}"/>
        </StackPanel>
    </Grid>
</Window>

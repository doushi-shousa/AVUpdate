<Window x:Class="AVUpdate.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Настройки"
        Width="380"
        SizeToContent="Height"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource MaterialDesignPaper}">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" VerticalAlignment="Top" Margin="0,0,0,10">

            <!-- Сетевой путь -->
            <TextBlock Text="Сетевой путь:" Margin="0,0,0,5"/>
            <TextBox x:Name="NetworkPathTextBox"/>
            <Button Content="Выбрать" Click="SelectNetworkPathButton_Click"
                    Margin="0,5,0,10" Style="{StaticResource MaterialDesignFlatButton}" />

            <!-- Маска архива -->
            <TextBlock Text="Имя архива (маска):"/>
            <TextBox x:Name="ArchiveNameTextBox" Margin="0,0,0,10"/>

            <!-- Вторичный путь -->
            <CheckBox x:Name="UseSecondaryPathCheckBox" Content="Использовать второй путь" Margin="0,10,0,5"/>
            <TextBlock Text="Вторичный путь:"/>
            <TextBox x:Name="SecondaryNetworkPathTextBox"/>
            <Button Content="Выбрать" Click="SelectSecondaryNetworkPathButton_Click"
                    Margin="0,5,0,10" Style="{StaticResource MaterialDesignFlatButton}" />

            <TextBlock Text="Логин:"/>
            <TextBox x:Name="SecondaryUsernameTextBox"/>
            <TextBlock Text="Пароль:" Margin="0,10,0,0"/>
            <PasswordBox x:Name="SecondaryPasswordBox" Margin="0,0,0,10"/>

            <!-- Кастомный источник -->
            <CheckBox x:Name="UseCustomSourceCheckBox" Content="Путь к обновлению (не DVD)" Margin="0,10,0,5"/>
            <TextBlock Text="Путь:"/>
            <TextBox x:Name="CustomSourcePathTextBox"/>
            <Button Content="Выбрать" Click="SelectCustomSourcePathButton_Click"
                    Margin="0,5,0,10" Style="{StaticResource MaterialDesignFlatButton}" />

            <!-- Выбор темы -->
            <TextBlock Text="Цветовая тема:" Margin="0,10,0,5"/>
            <ComboBox x:Name="ThemeComboBox" Width="180" SelectedIndex="0">
                <ComboBoxItem Content="Light" />
                <ComboBoxItem Content="Dark" />
                <ComboBoxItem Content="System" />
            </ComboBox>
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Сохранить"
                    Width="100"
                    Margin="0,0,10,0"
                    Click="SaveButton_Click"
                    Style="{StaticResource MaterialDesignRaisedButton}" />
            <Button Content="Отмена"
                    Width="100"
                    IsCancel="True"
                    Style="{StaticResource MaterialDesignFlatButton}" />
        </StackPanel>
    </Grid>
</Window>
